@model PagedList.IPagedList<ThoConShop.Business.Dtos.UserTradingHistoryDto>
@using ThoConShop.DataSeedWork.Extensions
@using System.Globalization
@{ 
    CultureInfo cul = CultureInfo.GetCultureInfo("vi-VN");
}
<div class="row">
    <h2 class="details-title">Lịch Sử Mua Tài Khoản</h2>
    <hr />
</div>

<div class="row details-footer">
    <div class="col-md-12 col-xs-12 col-lg-12" align="center">
        <table class="table">
            <thead>
                <tr>
                    <th class="recharge-table-border-bottom">
                        Thời Gian
                    </th>
                    <th class="recharge-table-border-bottom">
                        Số Tài Khoản
                    </th>
                    <th class="recharge-table-border-bottom">
                        Rank
                    </th>
                    <th class="recharge-table-border-bottom">
                        Tài Khoản
                    </th>
                    <th class="recharge-table-border-bottom">
                        Mật Khẩu
                    </th>
                    <th class="recharge-table-border-bottom">
                        Đơn Giá
                    </th>
                </tr>
            </thead>
            @if (Model.Count == 0)
            {
                <tbody>
                    <tr>
                        <td colspan="6" class="text-center">
                            <p>Bạn Chưa Có Cuộc Giao Dịch Nào</p>
                        </td>
                    </tr>
                </tbody>
            }
            else
            {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="recharge-table-border-top">
                            <td>
                                @item.CreatedDate
                            </td>
                            <td>
                                @item.AccountId
                            </td>
                            <td>
                                @item.RankName
                            </td>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                @item.Password
                            </td>
                            <td>
                                @item.PriceOfAccount.ToString("#,###", cul.NumberFormat)<sup>đ</sup>
                            </td>
                        </tr>
                    }
                </tbody>
            }

        </table>
    </div>
</div>
