@model ThoConShop.Web.Models.ChargingViewModel
@{
    ViewBag.Title = "ChargingView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    
    <div class="col-md-8 col-md-offset-2 divForm" style="margin-top: 15px;">
        <div>
            <span class="text-danger">@ViewBag.Message </span>
        </div>
        <div class="panel panel-danger" style="background: none">
            <div class="panel-heading">
                Nạp Thẻ
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("ChargingView", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <center>
                        <h5>
                            <b>
                                TỈ LỆ QUY ĐỔI: 10.000 THẺ CÀO = 10.000 VNĐ TRÊN WEB <br>
                                &gt;&gt; Khi nạp qua ATM tặng 20% giá trị &lt;&lt;
                            </b>
                        </h5>
                    </center>
                    <hr>
                    <div class="text-danger validation-summary-errors error-message">
                        @Html.ValidationSummary()
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="SoSeri">Số seri</label>
                        <div class="col-md-9" style="margin-bottom: 10px;">
                            @Html.TextBoxFor(a => a.SerialNumber, new {@class = "form-control"})
                            @*<input class="form-control" data-val="true" data-val-required="Bạn chưa nhập seri" id="SoSeri" name="SoSeri" type="text" value="">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Pin">Mã thẻ</label>
                        <div class="col-md-9" style="margin-bottom: 10px;">
                            @Html.TextBoxFor(a => a.PinNumber, new {@class = "form-control"})
                            @*<input class="form-control" data-val="true" data-val-required="Bạn chưa nhập mã thẻ" id="Pin" name="Pin" type="text" value="">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Loại Thẻ</label>
                        <div class="col-md-9" style="margin-bottom: 10px;">
                            <select class="form-control valid" id="CardType" name="CardType" aria-invalid="false">
                                <option value="1" selected="selected">Thẻ Viettel</option>
                                <option value="2">Thẻ MobiFone</option>
                                <option value="3">Thẻ VinaFone</option>
                                <option value="4">Thẻ Gate</option>
                                <option value="6">Thẻ VietnamMobile</option>
                                <option value="7">Thẻ ZING</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-9">
                            <input type="submit" class="btn btn-success btn-md" value="Nạp thẻ">
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>


@Scripts.Render("~/bundles/jqueryval")