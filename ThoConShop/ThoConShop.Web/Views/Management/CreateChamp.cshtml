@model ThoConShop.Web.Models.ChampCreationViewModel
@{
    ViewBag.Title = "CreateChamp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">

    @using (Html.BeginForm("CreateChamp", "Management", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-head style-primary">
                <header>Tạo Tướng</header>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên Tướng</label>
                            <div class="col-sm-10">
                                @*<input type="number" class="form-control" id="Lastname5">*@
                                @Html.TextBoxFor(a => a.ChampName, new { @class = "form-control" })
                                <div class="form-control-line"></div>
                                @Html.ValidationMessageFor(a => a.ChampName, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Hình Đại Diện</label>
                            <div class="col-sm-10">
                                <div class="form-group floating-label">
                                    @Html.TextBoxFor(a => a.Avatar, new { type = "file" })
                                    <div class="form-control-line"></div>
                                    @Html.ValidationMessageFor(a => a.Avatar, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-control-line"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div><!--end .card-body -->
            <div class="card-actionbar">
                <div class="card-actionbar-row">

                    <button type="submit" class="btn btn-flat btn-primary ink-reaction">Tạo</button>

                </div>
            </div>
        </div><!--end .card -->

    }
</div>

@Scripts.Render("~/bundles/jqueryval")




