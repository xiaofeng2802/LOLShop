@model ThoConShop.Web.Models.CreateOrUpdateAccountViewModel

@{
    ViewBag.Title = "CreateAccount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">

    @using (Html.BeginForm("CreateOrUpdateAccount", "Management", FormMethod.Post, new {@class = "form-horizontal", enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-head style-primary">
                @if (Model.AccounId != 0)
                {
                    <header>Cập nhật Tài Khoản LMHT</header>
                }
                else
                {
                    <header>Tạo Tài Khoản LMHT</header>
                }
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Rank</label>
                            <div class="col-sm-10">
                                <div class="form-group floating-label">
                                    @Html.DropDownListFor(a => a.RankId, Model.RankList, new {@class = "form-control", @id = "select2"})
                                    @Html.ValidationMessageFor(a => a.RankId,  "",new {@class = "text-danger" })
                                </div>
                                <div class="form-control-line"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Đơn Giá</label>
                            <div class="col-sm-10">
                                @*<input type="number" class="form-control" id="Lastname5">*@
                                @Html.TextBoxFor(a => a.Price, new {@class = "form-control", type = "number"})
                                <div class="form-control-line"></div>
                                @Html.ValidationMessageFor(a => a.Price, "", new { @class = "text-danger" })
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tài Khoản</label>
                            <div class="col-sm-10">
                                @*<input type="text" class="form-control" id="Username5">*@
                                @Html.TextBoxFor(a => a.UserName, new {@class = "form-control"})
                                <div class="form-control-line"></div>
                                @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mật Khẩu</label>
                            <div class="col-sm-10">
                                @*<input type="password" class="form-control" id="Password5">*@
                                @Html.TextBoxFor(a => a.Password, new {@class = "form-control"})
                                <div class="form-control-line"></div>
                                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Hình Đại Diện</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(a => a.Avatar, new {type = "file"})
                                <div class="form-control-line"></div>
                                @Html.ValidationMessageFor(a => a.Avatar, "", new { @class = "text-danger" })
                                
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Trang Ngọc & Tướng & Trang Phục</label>
                            <div class="col-sm-10">
                              
                                <div class="row">
                                    @Html.TextBoxFor(a => a.PageGem, new { type = "file", multiple = "multiple" })
                                    <div class="form-control-line"></div>
                                    @Html.ValidationMessageFor(a => a.PageGem, "", new { @class = "text-danger" })
                                </div>
                                <div class="row">
                                    @Html.TextBoxFor(a => a.Champs, new { type = "file" })
                                    <div class="form-control-line"></div>
                                    @Html.ValidationMessageFor(a => a.PageGem, "", new { @class = "text-danger" })
                                </div>
                                <div class="row">
                                    @Html.TextBoxFor(a => a.Skins, new { type = "file", placeholder="Trang Phục"})
                                    <div class="form-control-line"></div>
                                    @Html.ValidationMessageFor(a => a.PageGem, "", new { @class = "text-danger" })
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Ghi Chú</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(a => a.Description, new {@class = "form-control", rows = "3", placeholder = ""})
                                <div class="form-control-line"></div>
                                @Html.ValidationMessageFor(a => a.Description, "", new { @class = "text-danger" })
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--end .card-body -->
            <div class="card-actionbar">
                <div class="card-actionbar-row">
                    @if (Model.AccounId == 0)
                    {
                        <button type="submit" class="btn btn-flat btn-primary ink-reaction">Tạo</button>
                    }
                    else
                    {
                        @Html.HiddenFor(a => a.AccounId)
                        <button type="submit" class="btn btn-flat btn-primary ink-reaction">Cập Nhật</button>
                    }
                </div>
            </div>
        </div><!--end .card -->

    }
</div>

@Scripts.Render("~/bundles/jqueryval")