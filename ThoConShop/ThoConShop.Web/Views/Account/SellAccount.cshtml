@model ThoConShop.Web.Models.AccountSoldViewModel
@{
    ViewBag.Title = "SellAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-md-8 col-md-offset-2 divForm" style="margin-top: 15px;">
        <div>
            <span class="text-danger">@ViewBag.Message </span>
        </div>
        <div class="panel panel-danger" style="background: none">
            <div class="panel-heading">
                Nạp Thẻ
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("ChargingView", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                  
                   

                    <div class="form-group">
                        <div class="col-md-9" style="margin-bottom: 10px;">
                          Chúc mừng bạn đã mua thành công, đây là thông tin tài khoản:
                            @*<input class="form-control" data-val="true" data-val-required="Bạn chưa nhập seri" id="SoSeri" name="SoSeri" type="text" value="">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-9" style="margin-bottom: 10px;">
                            <span>Tài Khoản: </span>
                            [ @Html.DisplayTextFor(a => a.AccountName) ]
                            @*<input class="form-control" data-val="true" data-val-required="Bạn chưa nhập mã thẻ" id="Pin" name="Pin" type="text" value="">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-9" style="margin-bottom: 10px;">
                            <span>Mật Khẩu: </span>
                            [ @Html.DisplayTextFor(a => a.Password) ]
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2"></label>
                        <div class="col-md-9" style="margin-bottom: 10px;">
                            Cám ơn chúc bạn có một ngày tốt lành.
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>

